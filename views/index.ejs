<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head')%>
    <body>
        <div class="container">
            <h1>Message Board</h1>
            <div class="message-list">
                <% messages.map((message)=> { %>
                    <div class="message-card">
                        <div class="message-header">
                            <span class="user-name">
                                <%= message.user %>
                            </span>
                            <span class="date">
                                <%= message.added %>
                            </span>
                        </div>
                        <p class="message-text">
                            <%= message.text %>
                        </p>
                        <a href=<%=message.detailsLink %> class="btn-open">See details â†’</a>
                    </div>
                <% }) %>
            </div>
            <a href="/new" class="btn-new">+ New Message</a>
        </div>
    </body>

</html>